{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }